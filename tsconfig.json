{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
