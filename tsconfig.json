{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
